#include "stm32f4xx.h"
#include "stm32f4xx_nucleo.h"

#include "drv_uart.h"
#include "dynamixel.h"

extern int commande_end = 0;
extern char command_send;
extern int vitess_send;

int main(void)
{
	HAL_Init();	// passage par stm32f4xx_hal_msp.c : configuration des broches
	SystemClock_Config();

    uart1_Init();			// ZIGBEE
    uart2_Init();           // CABLE
    uart6_Init();           // DYNAMIXEL
    HAL_Delay(500);

	dxl_LED(1, LED_ON);
	HAL_Delay(500);
	dxl_LED(1, LED_OFF);
	HAL_Delay(500);
	dxl_LED(1, LED_ON );
	HAL_Delay(500);
	dxl_LED(1, LED_OFF);
	HAL_Delay(500);

	dxl_setOperatingMode(1, VELOCITY_MODE);
	dxl_torque(1, TORQUE_ON);


	dxl_LED(1, LED_ON);
	HAL_Delay(500);
	dxl_LED(1, LED_OFF);
	HAL_Delay(500);
	dxl_LED(1, LED_ON );
	HAL_Delay(500);
	dxl_LED(1, LED_OFF);
	HAL_Delay(500);

	dxl_setOperatingMode(2, VELOCITY_MODE);
	dxl_torque(2, TORQUE_ON);
        int compteur = 50;
	    while(1)
	    {
            if(command_send == 's'){
            	  term_printf("\r\n%d",vitess_send);
            	  dxl_setGoalVelocity(1, vitess_send);
            	  if(compteur > 0){
            		    //dxl_setGoalVelocity(2, -vitess_send);
            		  	 dxl_setGoalVelocity(1, vitess_send);
            	  }else{
          		    dxl_setGoalVelocity(2, -vitess_send);
            	  }
            	  compteur -= 1;
            }else if(command_send == 't'){
            	 vitess_send = 0;
            	 dxl_setGoalVelocity(1, vitess_send);
            	 dxl_setGoalVelocity(2, vitess_send);
            }
	        HAL_Delay(100); // 100 ms
	    }
	    return 0;
}
//=====================================================================================
